
@using WebBanHangOnline.Common
@{
    ViewBag.Title = "Giỏ hàng";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div style="height: 50px;"></div>
<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/home" class="stext-109 cl8 hov-cl1 trans-04">
            Trang chủ
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Giỏ hàng
        </span>
    </div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        
            @Html.Action("Partial_Item_Cart", "ShoppingCart")
 




        
        @if (ViewBag.CheckCart != null)
        {

            <div class="flex-c-m">
                <button onclick="window.location.href='/thanh-toan'; return false;" class="stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                    <b>Tiến hành đặt hàng</b>
                </button>
            </div>
            <div class="flex-c-m">
                <button onclick="window.location.href='/san-pham'; return false;" class="stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                    <b>Mua sắm thêm</b>
                </button>
            </div>
        }
        else
        {
            <div class="flex-c-m">
                <button onclick="window.location.href='/home'; return false;" class="stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                    <b>Mua sắm ngay</b>
                </button>
            </div>
        }
    </div>
</form>
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
}