@model IEnumerable<WebBanHangOnline.Models.EF.Product>
@using WebBanHangOnline.Common
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImge = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImge = img.Image;
        }
        <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15 @item.ProductCategory.Alias">
            <!-- Block2 -->
            <div class="block2">
                <div class="block2-pic hov-img0">
                    <img src="@strImge" alt="@item.Title">

                    <a href="/chi-tiet/@item.Alias-p@(item.Id)" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                        Thêm vào giỏ
                    </a>
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                            @item.Title
                        </a>
                        @if (item.PriceSale < item.Price)
                        {<span class="stext-105 cl3">@WebBanHangOnline.Common.Common.FormatNumber(item.PriceSale, 0)</span>
                        <span class="stext-105 cl3">@WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0)</span>
                    }
                        @if (item.Price == item.PriceSale)
                        {
                            <span class="stext-105 cl3">@WebBanHangOnline.Common.Common.FormatNumber(item.Price, 0)</span>
                        }
                    </div>

                    <div class="block2-txt-child2 flex-r p-t-3">
                        <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                            <img class="icon-heart1 dis-block trans-04" src="~/Feassets/images/icons/icon-heart-01.png" alt="ICON">
                            <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Feassets/images/icons/icon-heart-02.png" alt="ICON">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
